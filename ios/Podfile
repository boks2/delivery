platform :ios, '14.0'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Manual declaration para sa Google Maps at iba pang plugins
  pod 'google_maps_flutter_ios', :path => '.symlinks/plugins/google_maps_flutter_ios/ios'
  pod 'geocoding_ios', :path => '.symlinks/plugins/geocoding_ios/ios'
  pod 'local_auth_darwin', :path => '.symlinks/plugins/local_auth_darwin/darwin'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end
  end
end