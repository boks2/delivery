# Siguraduhin na 14.0 para sa Google Maps
platform :ios, '14.0'

# Gamitin ang relative path na standard sa lahat ng Flutter projects
flutter_install_all_ios_pods_helper = File.expand_path(File.join('..', 'Flutter', 'podhelper.rb'), __FILE__)
load flutter_install_all_ios_pods_helper

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end